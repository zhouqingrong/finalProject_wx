.user .header{padding:0 30rpx;height:190rpx;position:relative;}
.user .header:after {
   position: absolute;left: 0;right: 0;bottom: -98rpx;z-index: -1;
  content:'';
  height:100rpx;width: 100%;
  border-radius: 0 0 50% 50%;
  background-color: #3AB36E;
}
/* avatar */
  .user .header .picTxt .userinfo-avatar {
    overflow: hidden;
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
  }
  /* nickname */
.user .header .picTxt .name {
  font-size: 36rpx;
   color: rgb(250, 250, 250);
}
.user .header .picTxt button {
 background-color:rgba(255, 255, 255, 0)
}
/* id */
.user .header .picTxt .id{
  color:rgba(255,255,255,0.6);
  font-size:26rpx;
  margin-top:15rpx;
}
/* iconfont */
.user .header .iconfont{
  margin-right: 50rpx;
  color: #fff;
  font-size: 40rpx;
}

.user .wrapper{padding:0 20rpx;}
.user .wrapper .nav{background-color:#fff;border-radius:20rpx;height:140rpx;}
.user .wrapper .nav .item{flex:1;text-align:center;}
.user .wrapper .nav .item~.item{border-left:1px solid #eee;}
.user .wrapper .nav .item .title{font-size:30rpx;color:#666;}
.user .wrapper .nav .item .text{margin-top:16rpx;font-size:26rpx;}
.user .wrapper .myClass{background-color:#fff;border-radius:10rpx;margin-top:15rpx;}
.user .wrapper .myClass .title,.user .wrapper .myService .title{height:88rpx;padding:0 30rpx;border-bottom:1px dashed #ddd;font-size:30rpx;color:#282828;}
.user .wrapper .myClass .title .allOrder{font-size:26rpx;color:#666;}



